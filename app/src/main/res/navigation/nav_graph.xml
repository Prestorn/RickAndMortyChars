<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/characterListFragment">

    <fragment
        android:id="@+id/characterListFragment"
        android:name="com.example.rickandmorty.view.CharacterListFragment"
        android:label="CharacterListFragment" >
        <action
            android:id="@+id/action_characterListFragment_to_characterFragment"
            app:destination="@id/characterFragment" />
    </fragment>
    <fragment
        android:id="@+id/characterFragment"
        android:name="com.example.rickandmorty.view.CharacterFragment"
        android:label="CharacterFragment" >
        <action
            android:id="@+id/action_characterFragment_to_characterListFragment"
            app:destination="@id/characterListFragment" />
    </fragment>
    <argument
        android:name="characterId"
        app:argType="integer" />
    <argument
        android:name="characterName"
        app:argType="string" />
    <argument
        android:name="characterStatus"
        app:argType="string" />
    <argument
        android:name="characterSpecies"
        app:argType="string" />
    <argument
        android:name="characterType"
        app:argType="string" />
    <argument
        android:name="characterGender"
        app:argType="string" />
    <argument
        android:name="characterOrigin"
        app:argType="string" />
    <argument
        android:name="characterLocation"
        app:argType="string" />
    <argument
        android:name="characterImage"
        app:argType="string" />
</navigation>